<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/home_background_color"
   android:orientation="vertical" >
   
<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="127dp"
    android:layout_weight="0.8"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="117px"
        android:layout_height="117px"
       
        android:layout_marginTop="80px"
        android:paddingBottom="80px"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dip"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:text="@string/button_history"
        android:textColor="@color/home_normal_text_color" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dip"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:text="@string/button_live"
        android:textColor="@color/home_disable_text_color" 
        android:clickable="false"/>

    <Button
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dip"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:text="@string/button_breakthough"
        android:textColor="@color/home_normal_text_color" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dip"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:text="@string/button_rank"
        android:textColor="@color/home_normal_text_color" />
</LinearLayout>

        <LinearLayout android:id="@+id/linearLayout2"
  			   android:layout_width="fill_parent"
  			    android:layout_height="wrap_content"
  			    android:layout_weight="0.2"
  			    android:gravity="right"
            >

            <ImageButton
                android:id="@+id/set_button"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/set_button" 
                android:background="@color/home_background_color"
                android:layout_marginRight="60dip"/>
    
   </LinearLayout>
</LinearLayout>