<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50px"
    android:orientation="vertical" >
    
 <LinearLayout android:layout_width="fill_parent"
     android:layout_height="50px"  
     android:orientation="horizontal"
     android:gravity="center_vertical">
    <ImageView android:id="@+id/crown_image_view"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/crown_image_height"
        android:paddingLeft="20px"
        android:layout_gravity="center"
        
        android:layout_weight="7"
        />
    
    
    <TextView android:id="@+id/rank_item_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/individual_item_text_color"
        android:textSize="@dimen/individual_item_text_size"
        android:gravity="center"
        android:layout_weight="7"
        />
    
    <TextView android:id="@+id/username_item_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Matlab"
        android:textColor="@color/individual_item_text_color"
        android:textSize="@dimen/individual_item_text_size"
        android:gravity="center"
        android:layout_weight="4"
        />
    
    <TextView android:id="@+id/accumulate_point_item_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2222"
        android:textColor="@color/individual_item_text_color"
        android:textSize="@dimen/individual_item_text_size"
        android:layout_weight="6"
        android:gravity="center"/>
    
    </LinearLayout>  
   <ImageView android:layout_width="400dip"
       android:layout_height="wrap_content"
       android:src="@drawable/title_bottom_line_tile"
       android:layout_gravity="center_horizontal"/>
 
</LinearLayout>
